import java.util.*;
public class balanceArray{
    public static int balanceArray(int arr[],int n){
        int sum1=0;
        for(int i=0;i<n/2;i++){
            sum1+=arr[i];
        }
        int sum2=0
        for(int i=n/2;i<n;i++){
            sum2+=arr[i];
        }
        return Math.abs(sum1-sum2);
    }
    public static void main (String args[]){
         int arr[]={1, 7, 1, 1, 3, 1};
         int n=arr.length;
         System.out.println(balanceArray(arr,n));
    }
}
